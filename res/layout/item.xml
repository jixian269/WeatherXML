<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_city"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="14dp"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:gravity="center_vertical"
        android:text="guangzhou" />

    <TextView
        android:id="@+id/tv_lowTem"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/tv_city"
        android:layout_below="@+id/tv_city"
        android:gravity="center_vertical"
        android:textColor="#ffffff"
         />

    <ImageView
        android:id="@+id/img_weaIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:gravity="center_vertical"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_highTem"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:textColor="#ffffff"
        android:layout_alignBaseline="@+id/tv_lowTem"
        android:layout_toRightOf="@+id/tv_lowTem"
        android:gravity="center_vertical"
         />

    <TextView
        android:id="@+id/tv_stateDetailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_alignBaseline="@+id/tv_city"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="15sp"
        android:text="é˜´" />
    
</RelativeLayout>
